{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}
    <style>
        img {
            width: 300px;
        }
    </style>
    <div class="jumbotron">
        <h1>Symfony Records</h1>
        <p>{{ message }}</p>
        <p>Bienvenue sur le site de Symfony Records.</p>
        <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
    </div>
    <div class="container">
        <h2>Concerts à venir</h2>
    <div class="row">
            {% for concert in event %}
            <div class="thumbnail ml-3">
                <img src="{{ asset('img/' ~ concert.img) }}" alt="photo de concert">
                <div class="caption">
                    <h3>{{ concert.type }}</h3>
                    <p>{{ concert.description }}</p>
                    <p><a href="#" class="btn btn-primary" role="button">Réserver</a>
                </div>
            </div>
            {% endfor %}
    </div>
    </div>
{% endblock %}